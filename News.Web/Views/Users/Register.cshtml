@model RegisterViewModel

<form asp-action="Register" asp-controller="Users" method="post">
    <div class="mb-3 text-danger" asp-validation-summary="All"></div>
    <div class="mb-3">
        <label asp-for="FirstName" class="form-label">Ad</label>
        <input type="text" class="form-control" asp-for="FirstName">
    </div>
      
    <div class="mb-3">
        <label asp-for="SurName" class="form-label">Soyad</label>
        <input type="text" class="form-control" asp-for="SurName">
    </div>
    
    <div class="mb-3">
      <label asp-for="Mail" class="form-label">Email</label>
      <input type="email" class="form-control" asp-for="Mail" aria-describedby="emailHelp">
      <div id="emailHelp" class="form-text">Bilgilerinizi kimseyle paylaşmayacağız</div>
    </div>
    
    <div class="mb-3">
        <label asp-for="PhoneNumber" class="form-label">Telefon</label>
        <input type="text" class="form-control" asp-for="PhoneNumber">
    </div>
    

    <div class="mb-3">
      <label asp-for="Password" class="form-label">Parola</label>
      <input type="password" class="form-control" asp-for="Password">
    </div>
    
    <div class="mb-3">
      <label asp-for="ConfirmPassword" class="form-label">Parola Tekrar</label>
      <input type="password" class="form-control" asp-for="ConfirmPassword">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>