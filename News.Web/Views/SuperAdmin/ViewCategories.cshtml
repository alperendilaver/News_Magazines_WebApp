@model List<Category>
    <div class="container">
        <div class="row justify-content-md-center ">
            <div class="col-4">
                <form asp-action="AddCategory" asp-controller="SuperAdmin" method="post">
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" name="CategoryName" placeholder="Kategori Adı" aria-label="Kategori Adı" aria-describedby="button-addon2">
                        <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Kategori Ekle</button>
                    </div>
        
                </form>
            </div>
        </div>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <h2 class="text-center mt-4">Kategori Listesi</h2>
                <table class="table table-bordered mt-4">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Kategori Adı</th>
                            <th scope="col" style="width:20%;">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var cat in Model){
                            <tr>
                                <td>@cat.CategoryId</td>
                                <td><a asp-route-id="@cat.CategoryId" asp-controller="Category" asp-action="Detail"> @cat.CategoryName</a></td>
                                <td>
                                    <form asp-action="DeleteCategory" method="post" onsubmit="return confirm('Emin Misiniz')" >
                                        <input type="hidden"  name="CatId" value="@cat.CategoryId">
                                        <button type="submit" class="btn btn-outline-danger" >Kategoriyi Sil</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            
            </div>
        </div>
    </div>
    